{
  "browserslist": {
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ],
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ]
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^7.1.0",
    "@fortawesome/free-brands-svg-icons": "^7.1.0",
    "@fortawesome/free-solid-svg-icons": "^7.1.0",
    "@fortawesome/react-fontawesome": "^3.1.1",
    "@sentry/cli": "^2.58.2",
    "@sentry/react": "^10.27.0",
    "@sentry/vite-plugin": "^4.6.1",
    "@vercel/analytics": "^1.6.0",
    "@vercel/speed-insights": "^1.3.0",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "dotenv": "^17.2.3",
    "framer-motion": "^12.23.25",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sass": "^1.94.2",
    "ts-node": "^10.9.2",
    "vite-plugin-svgr": "^4.5.0",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.1",
    "@vitest/coverage-v8": "^3.2.4",
    "ajv": "^8.17.1",
    "autoprefixer": "^10.4.22",
    "cookie": "^1.1.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsonc": "^2.21.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "jsonc-eslint-parser": "^2.4.0",
    "lint-staged": "^16.2.7",
    "nth-check": "^2.1.1",
    "postcss": "^8.5.6",
    "postcss-import": "^16.1.1",
    "prettier": "^3.7.3",
    "stylelint": "^16.26.1",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-order": "^7.0.0",
    "stylelint-prettier": "^5.0.3",
    "typescript": "^5.9.3",
    "vite": "^7.2.6",
    "vitest": "^3.2.4"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "lint-staged": {
    "*.{cjs,js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{json,css,scss,md,html}": [
      "prettier --write"
    ]
  },
  "name": "jeromewolff.github.io",
  "overrides": {
    "typescript": "^5.5.4"
  },
  "packageManager": "pnpm@10.19.0",
  "private": false,
  "scripts": {
    "build": "pnpm run generate:sitemap && tsc && vite build",
    "dev": "vite dev",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "generate:sitemap": "node generate-sitemap-and-robots.cjs",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "serve": "vite preview",
    "start": "vite",
    "stylelint": "stylelint \"**/*.{css,scss}\"",
    "stylelint:fix": "stylelint \"**/*.{css,scss}\" --fix",
    "test": "vitest",
    "test:coverage": "vitest run --coverage --watch=false",
    "type-check": "tsc --noEmit",
    "validate": "pnpm run lint && pnpm run format:check && pnpm run stylelint && pnpm run type-check"
  },
  "type": "module",
  "version": "1.0.0"
}
